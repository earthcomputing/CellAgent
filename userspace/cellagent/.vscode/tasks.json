{
    "version": "2.0.0",
    "command": "~/.cargo/bin/cargo",
    "tasks": [
       {
            "label": "simulator run",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--bin",
                "simulator",
                "--features",
                "simulator, webserver",
                "--",
                "${workspaceFolder}/configs/10cell_config.json"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "SERVER_URL":"127.0.0.1:8088", 
                    "HTML": "html/index.html",
                    "RA_LOG": "info"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "simulator build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--bin",
                "simulator",
                "--features",
                "simulator, webserver"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "simulator check",
            "type": "shell",
            "command": "cargo",
            "args": [
                "check",
                "--bin",
                "simulator",
                "--features",
                "simulator,webserver"
            ],
            "group": "build",
            "problemMatcher": "$rustc-watch",
            "isBackground": true
        },
        {
            "label": "Watch",
            "group": "build",
            "type": "shell",
            "command": "cargo check",
            "problemMatcher": "$rustc-watch",
            "isBackground": true
        },
        {
            "label": "cell check",
            "type": "shell",
            "command": "cargo",
            "args": [
                "check",
                "--bin",
                "cell",
                "--features",
                "cell"
            ],
            "group": "build",
            "options": {
                "env": {"CELL_AGENT_DIR":"/tmp"}
            },
            "problemMatcher": []
        },
        {
            "label": "cell run",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--bin",
                "cell",
                "--features",
                "cell"
            ],
            "group": "build",
            "options": {
                "env": {"CELL_AGENT_DIR":"/tmp"}
            },
            "problemMatcher": []
        },
     ]
}
