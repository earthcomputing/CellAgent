{
    "version": "2.0.0",
    "command": "~/.cargo/bin/cargo",
    "tasks": [
        {
            "label": "cargo run",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--bin",
                "simulator",
                "--features",
                "simulator, webserver",
                "--",
                "${workspaceFolder}/configs/10cell_config.json"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "SERVER_URL":"127.0.0.1:8088", 
                    "HTML": "html/index.html"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "cargo build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--bin",
                "simulator",
                "--features",
                "simulator, webserver"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "cargo check",
            "type": "shell",
            "command": "cargo",
            "args": [
                "check",
                "--bin",
                "simulator",
                "--features",
                "simulator,webserver",
            ],
            "group": "build",
            "problemMatcher": "$rustc-watch",
            "isBackground": true
        },
        {
            "label": "Watch",
            "group": "build",
            "type": "shell",
            "command": "cargo watch",
            "problemMatcher": "$rustc-watch",
            "isBackground": true
        }
    ]
}
