{
    "version": "2.0.0",
    "command": "~/.cargo/bin/cargo",
    "tasks": [
        {
            "label": "simulator run api-new",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--bin",
                "simulator",
                "--features",
                "api-new, simulator, webserver",
                "--",
                "${workspaceFolder}/configs/10cell_config.json"
            ],
            "group": "build",
            "options": {
                "env": {
                    "SERVER_URL": "127.0.0.1:8088",
                    "HTML": "html/index.html",
                    "RA_LOG": "info"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "simulator run api-old",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--bin",
                "simulator",
                "--features",
                "api-old, simulator, webserver",
                "--",
                "${workspaceFolder}/configs/10cell_config.json"
            ],
            "group": "build",
            "options": {
                "env": {
                    "SERVER_URL": "127.0.0.1:8088",
                    "HTML": "html/index.html",
                    "RA_LOG": "info"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "simulator build api-new",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--bin",
                "simulator",
                "--features",
                "api-new, simulator, webserver"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "simulator build api-old",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--bin",
                "simulator",
                "--features",
                "api-old, simulator, webserver"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "simulator check api-new",
            "type": "shell",
            "command": "cargo",
            "args": [
                "check",
                "--bin",
                "simulator",
                "--features",
                "api-new, simulator, webserver"
            ],
            "group": "build",
            "problemMatcher": "$rustc-watch",
            "isBackground": true
        },
        {
            "label": "simulator check api-old",
            "type": "shell",
            "command": "cargo",
            "args": [
                "check",
                "--bin",
                "simulator",
                "--features",
                "api-old, simulator, webserver"
            ],
            "group": "build",
            "problemMatcher": "$rustc-watch",
            "isBackground": true
        },
        {
            "label": "simulator clippy api-new",
            "type": "shell",
            "command": "cargo",
            "args": [
                "clippy",
                "--bin",
                "simulator",
                "--features",
                "api-new, simulator, webserver"
            ],
            "group": "build",
            "problemMatcher": "$rustc-watch",
            "isBackground": true
        },
        {
            "label": "Watch",
            "group": "build",
            "type": "shell",
            "command": "cargo check",
            "problemMatcher": "$rustc-watch",
            "isBackground": true
        },
        {
            "label": "cell check",
            "type": "shell",
            "command": "cargo",
            "args": [
                "check",
                "--bin",
                "cell",
                "--features",
                "api-old, cell"
            ],
            "group": "build",
            "options": {
                "env": {
                    "CELL_AGENT_DIR": "/tmp"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "cell build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--bin",
                "cell",
                "--features",
                "api-old, cell",
                "--target",
                "x86_64-unknown-linux-musl",
            ],
            "group": "build",
            "options": {
                "env": {
                    "CELL_AGENT_DIR": "/tmp",
                    "CC_x86_64_unknown_linux_musl": "x86_64-linux-musl-gcc",                   
                }
            },
            "problemMatcher": []
        }
    ]
}
