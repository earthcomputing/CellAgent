{
    "version": "2.0.0",
    "configurations": [
      {
        "type": "lldb",
        "request": "launch",
        "name": "Launch",
        "cargo": {
          "args": [
            "build",
            "--bin=simulator",
            "--features=simulator"
          ]
        },
        "args": [
            "${workspaceFolder}/configs/10cell_config.json"       
        ],
        "program": "${workspaceFolder}/target/debug/simulator",
        "windows": {
          "program": "${workspaceFolder}/target/debug/simulator.exe"
        },
        "cwd": "${workspaceFolder}",
        "stopOnEntry": false,
        "sourceLanguages": [
          "rust"
        ]
      }
    ]
}